<div class="row w-100 m-0">
    {% for post in posts %}
        <a href="{{ post.link }}" class="col-md-4 p-0">
            <article style="background-image: url({{ post.thumbnail.src('medium_large') }});" class="frontpage__agenda-block d-flex flex-column justify-content-end p-2 mb-1">
            </article>
            <h5 class="frontpage__agenda-date m-0 text-white">
                {{ post._eventorganiser_schedule_start_start|date('D j F') }}
            </h5>
            <h3 class="frontpage__agenda-title text-white m-0 mb-2 mb-md-0">
                {{ post.title }}
            </h3>
        </a>
    {% endfor %}
</div>
