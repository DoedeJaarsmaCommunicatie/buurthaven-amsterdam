{% extends "templates/layouts/base.twig" %}

{% block content %}
    <article class="bg-yellow evenement">
        <h2 class="text-center m-0 special-big-title py-4 text-white">
            {# {{ owner.display_name }} #}
        </h2>
        <div class="container">
            <section class="row">
                <div class="col-md-6">
                    <figure class="evenement__img-figure">
                        <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}" class="evenement__img" srcset="{{ post.thumbnail.src|retina(1) }} 1x,
    {{ post.thumbnail.src|retina(2) }} 2x,
    {{ post.thumbnail.src|retina(3) }} 3x,
    {{ post.thumbnail.src|retina(4) }} 4x">
                    </figure>
                </div>
                <div class="col-md-6">
                    <aside class="evenemt__title-block">
                        <h1 class="m-0">{{ post.title }}</h1>
                    </aside>
                    <p class="summary">
                        {{ post.post_content|shortcodes }}
                    </p>
                    {% if not post.ID is same as(240) or post.ID is same as(242)  }
                    <p class="datum text-white text-lowercase">
                        {% if post.custom._eventorganiser_event_schedule.schedule is same as('once') %}
                            {% include 'templates/parts/event/once.twig' %}
                        {% else %}
                            {% include 'templates/parts/event/weekly.twig' %}
                        {% endif %}
                    </p>
                    <p class="website">
                        {#{{ post.meta('website') }}#}
                    </p>
                </div>
            </section>
        </div>
    </article>

    {#{{ dump(post) }}#}
    {#{{ dump(owner) }}#}
{% endblock %}
