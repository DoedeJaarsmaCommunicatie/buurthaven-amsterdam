{% extends "templates/layouts/base.twig" %}

{% block content %}
    <article class="bg-yellow evenement">
        <h2 class="text-center m-0 special-big-title py-4 text-white">{{ owner.name }}</h2>
        <div class="container">
            <section class="row">
                <div class="col-md-6">
                    <figure class="evenement__img-figure">
                        <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}" class="evenement__img" srcset="{{ post.thumbnail.src|retina(1) }} 1x,
    {{ post.thumbnail.src|retina(2) }} 2x,
    {{ post.thumbnail.src|retina(3) }} 3x,
    {{ post.thumbnail.src|retina(4) }} 4x">
                    </figure>
                </div>
                <div class="col-md-6">
                    <aside class="evenemt__title-block">
                        <h1 class="m-0">{{ post.title }}</h1>
                    </aside>
                    <p class="summary">
                        {{ post.post_content|shortcodes }}
                    </p>
                    <p class="datum text-white text-lowercase">
                        {% for day in post._eventorganiser_event_schedule.schedule_meta %}
                            <span class="dag">{{ __(day, 'buurthvn') }}{% if not loop.last %}, {% endif %}{% if loop.last %}: {% endif %}</span>
                        {% endfor %}
                        {% if not post.all_day %}
                            {{ post.StartTime|date('H:i') }}
                            {% if post.FinishTime %}
                                - {{ post.FinishTime|date('H:i') }}
                            {% endif %}
                        {% endif %}
                    </p>
                    <p class="website">
                        {#{{ post.meta('website') }}#}
                    </p>
                </div>
            </section>
        </div>
    </article>

    {#{{ dump(post) }}#}
    {#{{ dump(owner) }}#}
{% endblock %}
